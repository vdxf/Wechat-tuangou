/* components/goods-cart/goods-cart.wxss */
@import "../../static/icon/iconfont.wxss";
.goods-cart {
    border-radius: 20rpx;
    margin-bottom: 40rpx;
    overflow: hidden;
    background-color: #fff;
    width: 328rpx;
    height: 440rpx;
    display: flex;
    flex-direction: column;
  }
  .image1 {
    display: block;
    width: 328rpx;
    height: 328rpx;
  }
  .goods-title {
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    color: #1A1A1A;
    padding: 10rpx 20rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .cart-bottom {
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 20rpx;
  }
  .left {
    display: flex;
  }
  .new {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    color: #fff;
    border-radius: 4rpx;
    background-color: #F0190F;
  }
  .welfare {
    box-sizing: border-box;
    background-color: #F0AA05;
    color: #fff;
    border-radius: 4rpx;
    margin: 0 10rpx;
  }
  .new, .welfare{
    padding: 4rpx;
  }
  .icon-a-fenxiang2 {
    background-color: #F0190F;
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    margin-left: 6rpx;
  }