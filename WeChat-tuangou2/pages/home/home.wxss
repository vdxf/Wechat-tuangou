/* pages/home/home.wxss */
page {
    height: 100vh;
    overflow: hidden;
}
.home-view {
    height: 380rpx;
    background: linear-gradient(180deg, #FD3423 0%, rgba(253,52,35,0) 100%);
  }
  swiper {
    height: 180rpx;
    margin: 0 20rpx 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
  }
  .swiper-item {
    height: 180rpx;
  }
  .swiper-item image {
    display: block;
    width: 100%;
    height: 100%;
  }
  .home-scroll {
    height: 750rpx;
  }
  .home-goods-list {
    background: -webkit-linear-gradient(top,#FFF, rgba(240, 240, 240, 0.9));
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 32rpx;
  }
 