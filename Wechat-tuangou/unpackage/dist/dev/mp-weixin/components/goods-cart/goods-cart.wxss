/* 水平间距 */
.goods-cart {
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  background-color: #fff;
  width: 328rpx;
  height: 440rpx;
  display: flex;
  flex-direction: column;
}
.goods-cart image {
  display: block;
  width: 328rpx;
  height: 328rpx;
}
.goods-cart .goods-title {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  padding: 10rpx 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cart-bottom {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
}
.left {
  display: flex;
}
.new,
.repeated {
  display: flex;
  align-items: center;
  color: #fff;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  margin-right: 5rpx;
}
.new text,
.repeated text {
  white-space: nowrap;
}
.new image,
.repeated image {
  width: 10px;
  height: 20rpx;
  margin-right: 5rpx;
}
.new {
  background-color: #F0190F;
}
.repeated {
  background-color: #05BE87;
}
.welfare {
  background-color: #F0AA05;
  color: #fff;
  border-radius: 4rpx;
  padding: 2rpx 6rpx;
}
.right {
  background-color: #F0190F;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

