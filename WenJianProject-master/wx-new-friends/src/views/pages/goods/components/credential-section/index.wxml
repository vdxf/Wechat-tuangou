<wxs src="/wxs/filter.wxs" module="filter"/>

<view class="section">
  <view class="section-title">
    <text>资质授权</text>
  </view>
  <view class="section-content">
    <view class="section-prompt" wx:if="{{ objData.CredentialInfo }}">
      <text user-select>{{ objData.CredentialInfo }}</text>
    </view>
    
    <image 
      wx:for="{{ filter.split(objData.Credential, ';') }}"
      wx:key="index"
      class="section-image" 
      mode="widthFix" 
      src="{{ item }}" 
      lazy-load
      show-menu-by-longpress
    ></image>
  </view>
</view>